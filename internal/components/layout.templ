package components

templ layout(title string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title }</title>
			<script src="https://unpkg.com/htmx.org@1.9.2"></script>
			<script src="https://cdn.tailwindcss.com"></script>
			@styles()
		</head>
		<body>
			@navTemplate()
			{ children... }
		</body>
	</html>
}