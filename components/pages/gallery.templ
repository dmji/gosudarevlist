package pages 

import (
	"collector/components"
	"collector/components/cards"
)

templ Listing(nextPageParams string) {
	@components.Layout("Anime") {
		<div class="pt-3">
			@cards.SearchBar()
			<div id="filterPanel" class="w-auto px-4 py-4">
				@cards.Filters()
			</div>
			<div id="card-container" class="grid grid-cols-[repeat(auto-fill,minmax(300px,1fr))] gap-4 p-4">
				@cards.ListItemRenderTrigger(nextPageParams)
			</div>
		</div>
	}
}
